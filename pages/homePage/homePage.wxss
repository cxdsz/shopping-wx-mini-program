/* pages/homePage/homePage.wxss */
.search-css {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  /* background-color: lightblue; */
  align-items: center;
}

.searcType-css {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.searcType-css image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 5rpx;
}

.searcType-css text {
  font-size: 20rpx;
  /* margin-top: 3rpx; */
  color: #62C9D8;
}

.inputView-css {
  width: 83%;
  height: 70%;
  border-radius: 50rpx;
  /* background-color: green; */
  display: flex;
  flex-direction: row;
  align-items: center;
  border: solid 1rpx #62C9D8;
}

.inputView-css image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}

.inputView-css input {
  margin-left: 20rpx;
  height: 50rpx;
  width: 80%;
  font-size: 25rpx;
}

.swiper-box {
  width: 92%;
  height: 230rpx;
  margin-left: 4%;
  margin-top: 10rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.bar-css {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bar-css text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #62C9D8;
}

/* 商品列表 */
.goodList-css {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #f7f7f7;
  padding-bottom: 20rpx;
}

.goodItem-css {
  width: calc(50% - 30rpx);
  height: 500rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 12rpx;
  overflow:hidden;
}

.goodItem-css image {
  width: 100%;
  height: 350rpx;
  background-color: #f7f7f7;
}

.goodItem-css text {
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商品框底部布局，有可能增加销量 */
.bottom-css {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-css text {
  color: #FA494D;
  font-size: 30rpx;
}

.backLogin-css {
  background-color: rgba(0, 0, 0, 0.5);
  top: 0rpx;
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-css {
  width: 60%;
  height: 500rpx;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.login-css image {
  width: 100%;
  height: 80%;
}

.btn-css {
  width: 100%;
  height: 20%;
  background-color: #FC4863;
  border: none;
  border-radius: 0;
  color: lightgoldenrodyellow;
  font-weight: 800;
  background: -webkit-linear-gradient(left,#FC4863, #EC35B6);
}

.btn-css::after {
  border: 0;
  border-radius: 0; 
}
