/* pages/mine/address/editAddr/editAddr.wxss */

.view-css {
  background-color: #f7f7f7;
  position: absolute;
  width: 100%;
  height: 100%;
}

.item-css {
  background-color: white;
  padding-left: 5%;
  width: 95%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #454545;
  font-size: 30rpx;
}

.addr-css {
  background-color: white;
  padding-top: 20rpx;
  padding-left: 5%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #454545;
  font-size: 30rpx;
}

.area {
  width: 90%;
  padding: 10rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
  height: 120rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #454545;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.btn-css {
  width: 100%;
  height: 170rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-css {
  margin-top: -40rpx;
  width: 90%;
  height: 90rpx;
  background-color: #62C9D8;
  border-radius: 12rpx;
  text-align: center;
  line-height: 90rpx;
  color: white;
  font-size:30rpx;
}
